{
  "name": "microservices-architecture",
  "version": "1.0.0",
  "description": "Microservices architecture with 4 services",
  "type": "module",
  "scripts": {
    "dev": "npm run start:all",
    "start:user": "node services/user-service/server.js",
    "start:product": "node services/product-service/server.js",
    "start:payment": "node services/payment-service/server.js",
    "start:order": "node services/order-service/server.js",
    "start:gateway": "node api-gateway/server.js",
    "start:all": "concurrently \"npm run start:user\" \"npm run start:product\" \"npm run start:payment\" \"npm run start:order\" \"npm run start:gateway\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:user": "jest services/user-service/__tests__/",
    "test:product": "jest services/product-service/__tests__/",
    "test:payment": "jest services/payment-service/__tests__/",
    "test:order": "jest services/order-service/__tests__/",
    "test:contract": "jest contract-tests/"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "body-parser": "^1.20.2",
    "bull": "^4.12.2",
    "bcrypt": "^5.1.1",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "http-proxy-middleware": "^2.0.6",
    "jsonwebtoken": "^9.0.2",
    "better-sqlite3": "^9.2.2",
    "redis": "^4.6.10",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@jest/globals": "^29.7.0",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  }
}

